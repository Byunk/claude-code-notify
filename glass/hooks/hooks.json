{
  "description": "Plays the Glass sound",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "PermissionRequest|Stop",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      }
    ]
  }
}
